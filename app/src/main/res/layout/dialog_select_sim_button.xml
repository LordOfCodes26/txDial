<?xml version="1.0" encoding="utf-8"?>
<eightbitlab.com.blurview.BlurView
    android:id="@+id/blurView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:id="@+id/dialog_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <douglasspgyn.com.github.circularcountdown.CircularCountdown
        android:id="@+id/countdownView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:visibility="gone"
        app:countdownBackgroundColor="?attr/colorControlNormal"
        app:countdownForegroundColor="?attr/colorPrimary"
        app:countdownTextColor="?attr/colorPrimary"
        app:countdownTextSize="24sp"/>

    <RelativeLayout
        android:id="@+id/selectSimRememberHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:paddingHorizontal="@dimen/activity_margin"
        android:background="?attr/selectableItemBackground">

        <com.goodwy.commons.views.MyAppCompatCheckbox
            android:id="@+id/select_sim_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:clickable="false"
            android:text="@string/always_use_this_sim"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectSimRememberHolder"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        style="@style/DialogButtonContainerStyle"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            style="@style/Widget.Material3.Button.TextButton.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sim2Button"
            style="@style/Widget.Material3.Button.TextButton.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIM 2"
            android:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sim1Button"
            style="@style/Widget.Material3.Button.TextButton.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIM 1"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>
</eightbitlab.com.blurview.BlurView>
