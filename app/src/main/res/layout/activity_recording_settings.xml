<?xml version="1.0" encoding="utf-8"?>
<eightbitlab.com.blurview.BlurTarget xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBlurTarget"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/recording_settings_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.goodwy.commons.views.MyAppBarLayout
            android:id="@+id/recording_settings_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/recording_settings_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/call_recording"
                app:titleTextAppearance="@style/AppTheme.ActionBar.TitleTextStyle" />
        </com.goodwy.commons.views.MyAppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/recording_settings_nested_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingHorizontal="@dimen/activity_padding_left_right"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:id="@+id/recording_settings_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_margin">

                <!-- Enable Recording -->
                <TextView
                    android:id="@+id/settingsGeneralLabel"
                    style="@style/SettingsSectionLabelStyle"
                    android:text="@string/general"
                    tools:textColor="@color/primary" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsRecordingGeneralHolder"
                    style="@style/SettingsSectionHolder"
                    app:cardCornerRadius="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/settingsRecordingGeneralWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/settingsRecordingEnabledHolder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyLiquidSwitch
                                android:id="@+id/settingsRecordingEnabledSwitch"
                                style="@style/SettingsSwitchStyle"
                                android:text="@string/enable_call_recording"
                                app:switchPadding="@dimen/bigger_margin" />
                        </RelativeLayout>

                        <!-- Auto-recording Rule -->
                        <RelativeLayout
                            android:id="@+id/settingsRecordingAutoRuleHolder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingAutoRuleLabel"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="68dp"
                                android:text="@string/auto_recording_rule" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingAutoRule"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="All calls" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Format and Location -->
                <TextView
                    android:id="@+id/settingsFormatLocationLabel"
                    style="@style/SettingsSectionLabelStyle"
                    android:text="@string/format_and_location"
                    tools:textColor="@color/primary" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsFormatLocationHolder"
                    style="@style/SettingsSectionHolder"
                    app:cardCornerRadius="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:id="@+id/settingsFormatLocationWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Audio Format -->
                        <RelativeLayout
                            android:id="@+id/settingsRecordingFormatHolder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingFormatLabel"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="68dp"
                                android:text="@string/recording_format" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingFormat"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="WAV" />
                        </RelativeLayout>

                        <!-- Save Location -->
                        <RelativeLayout
                            android:id="@+id/settingsRecordingSaveLocationHolder"
                            style="@style/SettingsHolderStyle">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingSaveLocationLabel"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="68dp"
                                android:text="@string/save_location" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingSaveLocation"
                                style="@style/SettingsTextValueStyle"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/settings_margin"
                                tools:text="App Storage" />
                        </RelativeLayout>

                        <!-- Custom Path (visible only if Custom location selected) -->
                        <RelativeLayout
                            android:id="@+id/settingsRecordingCustomPathHolder"
                            style="@style/SettingsHolderStyle"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingCustomPathLabel"
                                style="@style/SettingsTextLabelStyle"
                                android:layout_centerVertical="true"
                                android:text="@string/custom_path" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingCustomPath"
                                style="@style/SettingsTextValueStyle"
                                android:layout_below="@id/settingsRecordingCustomPathLabel"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/tiny_margin"
                                android:layout_marginEnd="@dimen/settings_margin"
                                android:alpha="0.7"
                                android:textSize="@dimen/smaller_text_size"
                                tools:text="/storage/emulated/0/MyRecordings" />
                        </RelativeLayout>

                        <!-- Current Path (info only) -->
                        <LinearLayout
                            android:id="@+id/settingsRecordingCurrentPathHolder"
                            style="@style/SettingsHolderStyle"
                            android:clickable="false"
                            android:focusable="false"
                            android:orientation="vertical">

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingCurrentPathLabel"
                                style="@style/SettingsTextLabelStyle"
                                android:text="@string/current_save_path" />

                            <com.goodwy.commons.views.MyTextView
                                android:id="@+id/settingsRecordingCurrentPath"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/tiny_margin"
                                android:alpha="0.7"
                                android:textSize="@dimen/smaller_text_size"
                                tools:text="/storage/emulated/0/Android/data/com.android.dialer/files/Recordings" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Actions -->
                <TextView
                    android:id="@+id/settingsActionsLabel"
                    style="@style/SettingsSectionLabelStyle"
                    android:text="@string/actions"
                    tools:textColor="@color/primary" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/settingsActionsHolder"
                    style="@style/SettingsSectionHolder"
                    app:cardCornerRadius="@dimen/activity_margin"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:id="@+id/settingsRecordingOpenFolderHolder"
                        style="@style/SettingsHolderStyle">

                        <com.goodwy.commons.views.MyTextView
                            android:id="@+id/settingsRecordingOpenFolderLabel"
                            style="@style/SettingsTextLabelStyle"
                            android:layout_centerVertical="true"
                            android:text="@string/open_recordings_folder" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</eightbitlab.com.blurview.BlurTarget>
